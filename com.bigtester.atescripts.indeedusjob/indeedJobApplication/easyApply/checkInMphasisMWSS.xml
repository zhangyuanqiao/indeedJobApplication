		<ate:elementStep id="stepTypeInUserName"
			stepDescription="type in User Name" stepName="stepTypeInUserName"
			optionalStep="false" targetStep="false" elementActionDef="eadTypeInUserName">
		</ate:elementStep>
				
		<ate:elementStep id="stepTypeInPass"
