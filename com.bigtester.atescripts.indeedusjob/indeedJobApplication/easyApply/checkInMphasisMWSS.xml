		<ate:elementStep id="stepLogin"
			stepDescription="login" stepName="stepLogin"
			targetStep="false" elementActionDef="eadClickLoginButton" mailScreenShot="true">
			<ate:asserterReferences id="assertSuccessCheckIn">
				<ate:ateXmlElementReference id="checkInSuccessRef" ateXmlElementID="checkInSuccessElementAsserter"/>
			</ate:asserterReferences>
		</ate:elementStep>
		<ate:elementStep id="stepClickCheckInButton"
			stepDescription="check in" stepName="stepClickCheckInButton"
			targetStep="true" elementActionDef="eadClickCheckInButton" mailScreenShot="true">
			<ate:asserterReferences id="assertSuccessCheckIn">
				<ate:ateXmlElementReference id="checkInSuccessRef" ateXmlElementID="checkInSuccessElementAsserter"/>
			</ate:asserterReferences>
		</ate:elementStep>
		
		<ate:lastStep id="mylaststep" stepName="mylaststep"
			stepDescription="last step close browser" targetStep="false"
			pageObject="myLastPage">
		</ate:lastStep>

